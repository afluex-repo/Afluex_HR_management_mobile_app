<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_leave_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="Type"
            android:textSize="14sp"

            android:textColor="@color/black"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="0.8dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/txt_from"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="From"
            android:gravity="center"

            android:textSize="14sp"

            android:textColor="@color/black"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="0.8dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/txt_to"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="To"
            android:gravity="center"

            android:textSize="14sp"

            android:textColor="@color/black"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="0.8dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/txt_remark"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="Remark"
            android:textSize="14sp"

            android:textColor="@color/black"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:layout_height="0.8dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Status"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            />
        <View
            android:id="@+id/view_details"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:background="@drawable/baseline_arrow_drop_down_24"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_approval"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_50"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_approved_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Approved By:"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_approved_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Affluex"
                android:layout_weight="1"
                android:background="@color/white"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="15/12/2023"
                android:layout_weight="1"
                android:background="@color/white"
                android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black"/>

</LinearLayout>